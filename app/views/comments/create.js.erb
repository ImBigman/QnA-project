$('.'+"<%= @comment.commentable.class.name.underscore %>"+'-comment-errors').html('<%= render 'shared/errors', resource: @comment %>');

<% if @comment.persisted? %>
  $("."+"<%= @comment.commentable.class.name.underscore %>"+"_id_"+"<%= @comment.commentable.id %>"+' .'+ "<%= @comment.commentable.class.name.underscore %>" +'-comments').append('<%= j render @comment %>');
  $("."+"<%= @comment.commentable.class.name.underscore %>"+"_id_"+"<%= @comment.commentable.id %>"+' .comment-block').hide();
  $("."+"<%= @comment.commentable.class.name.underscore %>"+"_id_"+"<%= @comment.commentable.id %>"+' .empty').hide();
  $("."+"<%= @comment.commentable.class.name.underscore %>"+"_id_"+"<%= @comment.commentable.id %>"+' .comment-button').show();
  $("."+"<%= @comment.commentable.class.name.underscore %>"+"_id_"+"<%= @comment.commentable.id %>"+' a#'+"<%= @comment.commentable.class.name.underscore %>"+'-comment').show();
<% end %>
